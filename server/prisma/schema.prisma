generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(CUSTOMER)
  phone     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  customer  Customer?
  provider  Provider?

  @@index([phone])
}

model Customer {
  id        Int       @id @default(autoincrement())
  userId    Int       @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
  user      User      @relation(fields: [userId], references: [id])
  pets      Pet[]
}

model Provider {
  id           Int            @id @default(autoincrement())
  userId       Int            @unique
  businessName String         @unique
  description  String?
  address      String
  city         String
  latitude     Float
  longitude    Float
  verified     Boolean        @default(false)
  profileImage String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  Availability WorkingSchedule[]
  bookings     Booking[]
  user         User           @relation(fields: [userId], references: [id])
  services     Service[]

  @@index([city])
}

model Pet {
  id        Int       @id @default(autoincrement())
  ownerId   Int
  name      String
  type      Animal    @default(DOG)
  age       Int?
  breed     String?
  weight    Int?
  notes     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
  owner     Customer  @relation(fields: [ownerId], references: [id])

  @@index([ownerId])
}

model Booking {
  id                 Int             @id @default(autoincrement())
  customerId         Int
  providerId         Int
  petId              Int
  date               DateTime
  startTime          DateTime        @db.Time(6)
  endTime            DateTime        @db.Time(6)
  status             BookingStatus   @default(CONFIRMED)
  cancellationReason String?
  total              Float
  notes              String?
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  services           BookedService[]
  customer           Customer        @relation(fields: [customerId], references: [id])
  pet                Pet             @relation(fields: [petId], references: [id])
  provider           Provider        @relation(fields: [providerId], references: [id])

  @@index([providerId, date])
  @@index([customerId])
  @@index([providerId])
}

model Service {
  id         Int             @id @default(autoincrement())
  providerId Int
  name       String
  price      Float
  duration   Int
  active     Boolean         @default(true)
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  bookings   BookedService[]
  provider   Provider        @relation(fields: [providerId], references: [id])

  @@unique([providerId, name])
}

model BookedService {
  id        Int      @id @default(autoincrement())
  bookingId Int
  serviceId Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  booking   Booking  @relation(fields: [bookingId], references: [id])
  service   Service  @relation(fields: [serviceId], references: [id])
}

model WorkingSchedule {
  id         Int      @id @default(autoincrement())
  providerId Int
  weekDay    WeekDay
  startTime  DateTime @db.Time(6)
  endTime    DateTime @db.Time(6)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Provider   Provider @relation(fields: [providerId], references: [id])

  @@unique([providerId, weekDay])
}

enum BookingStatus {
  CONFIRMED
  REJECTED
  CANCELLED_BY_CUSTOMER
  CANCELLED_BY_PROVIDER
  COMPLETED
}

enum Animal {
  CAT
  DOG
  BIRD
  OTHER
}

enum Role {
  CUSTOMER
  PROVIDER
  ADMIN
}

enum WeekDay {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}
